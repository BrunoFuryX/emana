.footer 
    background: #EEF2F6
    &__container 
        max-width: 1140px 
        margin: 0 auto
        padding: 50px (30px / 2)

    &__row 
        display: flex 
        justify-content: space-between
        flex-flow: row wrap
        margin: -(30px / 2)

    &__box 
        flex: 0 1 210px
        ul
            a
                color: #000
                padding: 5px 0
                display block
                font-weight: 600

    &__title 
        padding-bottom: 10px
        color #808080
        font-size: 14px !important
        font-weight: 400 !important
        letter-spacing: .5px

    &__contact 
        &-icon 
            display: inline-block
            vertical-align: middle
            margin-right: 5px
            font-size: 20px
            
            
.payments
    &__list
        display: flex
        align-items: center
        justify-content: flex-start
        flex-wrap: wrap

    &__item
        margin: 5px