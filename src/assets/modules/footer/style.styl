.footer 
    background: #F5F7F6
    &__container 
        max-width: 1630px 
        margin: 0 auto
        padding: 50px (30px / 2)

    &__row 
        display: flex 
        justify-content: space-between
        flex-flow: row wrap
        gap: 15px
        @media mobile
            justify-content: center
            text-align: center

    &__box 
        flex: 0 1 210px
        span
            font-weight: 600
            font-size: 13px
        ul
            a
                color: #51636A
                padding: 5px 0
                display block
                font-weight: 400

    &__title 
        padding-bottom: 10px
        color #51636A
        font-size: 14px !important
        font-weight: 800 !important
        letter-spacing: .5px

    &__contact 
        &-icon 
            display: inline-block
            vertical-align: middle
            margin-right: 5px
            font-size: 20px
            
            
.payments
    &__list
        display: flex
        align-items: center
        justify-content: flex-start
        flex-wrap: wrap

    &__item
        margin: 5px



.crowd
    height: 64px
    width: 100%
    display: flex
    justify-content: center
    align-items: center
    gap: 5px
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    line-height: 1;
    /* or 17px */
    background: #F1F1F1;
    text-align: center;
    color: rgba(0, 0, 0, 0.6);