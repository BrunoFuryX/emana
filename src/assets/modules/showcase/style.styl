.showcase 
    padding: 65px 0 110px

    &__header 
        margin-bottom: 60px 

    &__title 
        text-align: center 

    &__list 
        display: flex 
        justify-content: space-between
        align-items: stretch
        flex-flow: row wrap
        min-width: 100%

    &__item 
        flex: 1 1 254px
        padding: (30px / 2)

    @media(max-width: 991px)
        .slick-list
            padding: 0 15px

@media (min-width: (1110px + 100))
    .showcase 
        .slick-prev 
            left: -50px
        .slick-next 
            right: -50px