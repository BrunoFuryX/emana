#linkPagParcelado
    display: inline-block 
    padding: 10px 20px
    border: 0
    font-size: 14px
    font-weight: regular 
    background: rgba(0,0,0, .5)
    color: #ffffff

#bloco-add-lista 
    margin: 0
    border: 0
    a
        display: flex 
        justify-content: center 
        align-items: center
        height: 30px
        padding: 5px
        border: solid 1px rgba(0,0,0,.1)
        font-size: 10px
        font-weight: regular
        text-transform: uppercase

#cepbox
    margin: 0
    padding: 10px 0 20px
    border: 0
    
    input 
        display: inline-block 
        vertical-align: middle

    label 
        display: none 

    .cepbox-text
        font-size: 14px
        text-transform: uppercase 
        padding: 10px 0

    .botao-simular-frete
        display: inline-flex 
        justify-content: center 
        align-items: center 
        vertical-align: middle
        width: 80px
        height: 45px
        margin-top: -2px
        margin-left: 10px   
        background: rgba(0,0,0,.5)
        font-size: 0 
        color: #fff 
        border: 0
        border-radius: 0
        &:before 
            content: 'Calcular'
            font-size: 12px

.botao-comprar 
    width: 100% 

    .botao-commerce-img
        background: none 
        width: 100% 
        height: 45px 
        padding: 0

#nao_disp
    padding: (30px / 2)
    border: solid 1px rgba(0,0,0,.05)

    h5 
        margin: 20px 0 0 
        font-size: 14px
        font-weight: bold 
        text-transform: uppercase 

.page-product 
    .main__container
        padding: 0 15px
    &__labels 
        display: block 
        padding: 10px 0

        #botoes 
            margin: -10px

    &__details 
        #info 
            display: none 

    &__image 
        position: relative 
        z-index: 10

        // Ajuste Zoom

        #wrap
            display: inline-block 
            position: relative
            width: 600px
            height 630px
            max-width: 100%
            max-height: 70%
            display: flex
            justify-content: center
            align-items: center
            margin: auto

        #cloud-zoom-big 
            z-index: 100!important
            min-width: 100% 
            min-height: 100%
            left: 0 !important
            margin-left: 0 !important
            background-color: #fff

    &__name 
        font-style: normal;
        font-weight: bold;
        font-size: 64px;
        color: #29292E;
        line-height: 1;

    .additional-message
        font-style: normal;
        font-weight: bold;
        font-size: 30px;
        color: #29292E;
        padding-bottom: 35px
        display: block
        max-width: 582px

    .description_small
        padding 40px 0 60px
        font-style: normal;
        font-weight: normal;
        font-size: 24px;
        line-height: 120%;
        /* or 29px */
        letter-spacing: 0.005em;

        color: #464646;

    &__head 
        display: flex 
        justify-content: space-between
        font-size: 14px
        padding: 10px 0

    &__links 
        display: flex 
        flex-flow: row wrap
        margin: 10px -5px

        &-item
            flex: 1 1 50%
            padding: 5px

            a 
                display: flex 
                justify-content: center 
                align-items: center
                height: 30px
                padding: 5px
                border: solid 1px rgba(0,0,0,.1)
                font-size: 10px
                text-transform: uppercase

            &--compare 
                input 
                    display: none 

    &__actions 
        display: flex
        align-items: center
        gap: 35px
        padding: 35px 0 
        border-top: 1px solid #e1e1e1
        width: fit-content;
        @media mobile
            flex-wrap: wrap
            justify-content: center

        button
            width: 234px;
            height: 56px;
            background: #EB6323;
            font-weight: bold;
            font-size: 22px;
            line-height: 36px;
            text-align: center;
            color: #FFFFFF;
            display: flex
            gap: 8px
            text-transform: uppercase
        #quantidade 
            height: 56px
            width: 162px
            background: #f6f6f6
            display: flex
            transform: rotate(0.08deg);
            padding: 12px 18px
            position: relative
            justify-content: center
            align-items: center
            border: 0
            #quant
                width: auto
                height 32px
                border: 0
                background: transparent
                text-align: center
                font-style: normal;
                font-weight: bold;
                font-size: 18.874px;
                letter-spacing: 0.005em;
                color: #29292E;
            #plus
                height: 32px
                width: 32px
                background: #EB6323;
                color: #fff
                font-size: 28px
                font-weight: 300
                border: 0
                padding: 0
                min-width: 0
                min-height: 0
                position: absolute
                top: 50%
                right: 12px
                transform: translateY(-50%)
            #minus
                height: 32px
                width: 32px
                border: 0

                background: #E1E1E1;
                border-radius: 8px;
                color: #5E5E6D
                font-size: 14px
                font-weight: 300
                padding: 0
                min-width: 0
                min-height: 0
                position: absolute
                top: 50%
                left: 12px
                transform: translateY(-50%)


.texto_variacao
    display: flex 
    padding: 0 
    h2, span
        float: none 
        width: auto
        margin-right: 5px

    h2:after 
        content: ': '

.lista_cor_variacao
    padding: 10px 0 
    
.lazy
    width: auto

@media (min-width: 992px) 
    .page-product 
        &__essential 
            display: grid
            grid-template-areas: "image header" "image details"
            grid-template-columns: 1fr 55%
            grid-template-rows: auto 1fr

        &__image 
            grid-area: image 
        &__header 
            grid-area: header 
            
        &__details 
            grid-area: details
            
