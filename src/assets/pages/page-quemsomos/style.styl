p 
  img
    width: auto !important
    height: auto !important

.quemsomos
  &-container
    max-width: 1330px
    padding 0 15px
    width: 100%
    margin: auto
    text-align: center;
    background: #FFFBEF
    box-shadow: -1300px 0px 0px 0px #FFFBEF, 1300px 0px 0px 0px #FFFBEF
    img
      width: auto !important
      height: auto !important
      margin: auto
      margin-top: 200px
      margin-bottom: -5px
      @media mobile
        margin-top: 100px

    p
      margin-bottom: 40px
      font-size: 28px
      font-weight: 400
      color: #3B3B31
      text-align: left;
      @media mobile
        margin-bottom: 20px
        font-size: 14px
  &-flex
    display: flex
    justify-content: space-between
    @media mobile
      flex-wrap: wrap
    p
      max-width: 660px
    img
      margin: 0
      margin-bottom: -5px

  &-titulo
    position: relative
    width: fit-content;
    padding-top: 167px
    margin: 0
    margin-bottom: 50px
    @media mobile
      padding-top: 40px
      margin: 0
      margin-bottom: 20px
    span
        position relative
        font-size: 60px
        font-weight: 700
        line-height: 60px
        color: #4D4D4D
        z-index 1
        @media mobile
            font-size: 30px
        
    &:after
        bottom: 0
        background: #F7B84B
        width: 100%
        height: 17px
        content: ""
        display: block
        position: absolute
        z-index 0
        left: 0