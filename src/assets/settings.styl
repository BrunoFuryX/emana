/**
 *  Settings Global do CSS (Stylus)
 *  - Essas Configurações são chamados em todos arquivos styles 
 *  - Não se deve inserir estruturas css, é permitido somente variaves e funções
 */

 

// Placeholder
$button 
    display: inline-block 
    padding: 13px 15px
    border-radius: 0

    font-size: 14px
    font-weight: regular

    background: rgba(0,0,0,.5)
    color: #fff

    &:hover 
        text-decoration: none 


// mixins
container(args...) 
    width: 100%
    max-width: args 
    padding: 0 (30px/2)

icon(args...)
    content: args
    font-family: "Font Awesome 5 Free"
    font-weight: 900

// keyframes
@keyframes slideOpen
    0% 
        transform: translate3d(-100%, 0, 0)
    50% 
        transform: translate3d(0, 0, 0)

@keyframes slideOpenButton 
    0%, 50%
        opacity: 0 
    100% 
        opacity: 1

@keyframes slideClose
    0%, 50% 
        transform: translate3d(0, 0, 0)
    100% 
        transform: translate3d(-100%, 0, 0)

@keyframes slideCloseButton 
    0%
        opacity: 1
    50%, 100%
        opacity: 0

desktop = unquote("screen and (min-width: 992px)")
mobile = unquote("screen and (max-width: 991px)")

color = #70BDAF
transition = all .2s ease-out


.black
    font-weight: 900
.extra-bold
    font-weight: 800
.bold
    font-weight: 700
.semi-bold
    font-weight: 600
.medium
    font-weight: 500
.regular
    font-weight: 400
.light
    font-weight: 300
.thin
    font-weight: 200

*
    transition: transition


.titulo
    position: relative
    width: fit-content
    margin: auto
    span
        position relative
        font-size: 33px
        font-weight: 600
        line-height: 35px
        color: #4D4D4D
        z-index 1
    &:after
        bottom: 0
        background: #F7B84B
        width: 100%
        height: 19px
        content: ""
        display: block
        position: absolute
        z-index 0
