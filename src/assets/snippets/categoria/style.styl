.categoria
    padding: 60px 0
    @media mobile
        padding: 30px 0
    &__header
        margin-bottom: 60px
    
    &__button
        width: 115px
        height: 35px
        background: #EEF2F6
        border 0
        font-size: 14px
        letter-spacing: .2px
        font-weight: 600
        color: #000
        display flex
        justify-content: center
        align-items: center
        border-radius: 3px
        margin: auto
    &__content
        display: flex
        justify-content: space-between
        gap: 15px
        margin-bottom: 50px

        @media mobile
            justify-content: center
            flex-wrap: wrap;
            margin-bottom: 25px

    &__item
        figure
            position relative
            height: calc(100% - 5px);
            span
                display: flex
                width: 100%
                height: 100%
                justify-content: center
                align-items: center
                position absolute
                top: 0
                left: 0
                background: #0008
                font-size: 33px
                font-weight: 700
                color: #fff
                opacity 0
                border-radius: 4px;

            &:hover
                span
                    opacity 1

        