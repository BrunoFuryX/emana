.comentario
    padding: 60px 0
    &__header
        margin-bottom: 30px
        text-align: center
    
    &__content
        display: flex
        justify-content: space-between
        gap: 15px
        @media mobile
            justify-content: center
            flex-wrap: wrap;

    &__item
        text-align: center
        max-width: 488px
        width: 100%
        border: 1px solid #C9C9C9
        border-radius: 4px
        padding: 60px 30px 20px

        figure
            display: flex
            justify-content: center
            align-items: center
            flex-direction: column
            margin-bottom: 20px
            :nth-child(1)
                margin-bottom: 20px
            
        h4
            font-size: 32px
            font-weight: 500
            color: #000000
            margin-bottom: 20px

        span
            display: block
            width: 100%
            font-size: 21px
            color: #51636A
            height: 160px
            width: 320px
            margin: auto
            overflow: hidden
