.cookies-alert{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px;
    width: 100%;
    visibility: hidden;
    opacity: 0;
    font-size: 20px;
    z-index: 99999;
    margin: 0;
    font-size: 16px;
    line-height: 16px;
    text-align: center;
    box-shadow: 0 0 3px 1px #232323;
    background-color: #232323;
    color: #fff;
    @media(max-width: 991px) {
        flex-wrap: wrap;
    }

    p {
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 0;
        color: #fff
    }

    .cookies-alert__close{
        font-size: 16px;
        background: transparent;
        line-height: 16px;
        padding: 0;
        font-weight: 700;
        margin: auto;
        border-radius: 0;
        border: 2px solid #fff;
        font-size: 14px; 
        display: flex;
        align-items: center;
        justify-content: center;
        max-width: 180px;
        padding 0 20px
        margin: 0;

        @media(max-width: 991px) {
            margin: 10px auto;
        }
        
        &:hover {
            background: #fff;
            color: #000;
        }
    }
}

.show-cookies-alert{    
    .cookies-alert{
        opacity: 1;
        visibility: visible;
    }
}
