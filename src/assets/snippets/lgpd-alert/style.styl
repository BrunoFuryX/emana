.lgpd-alert{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: white;
    color: #575756;
    width: 100%;
    visibility: hidden;
    opacity: 0;
    font-size: 20px;
    z-index: 99999;
    padding: 20px 20vw;
    box-shadow: 0 0 3px 1px lightgrey;
    margin: 0;
    font-size: 16px;
    line-height: 16px;
    text-align: center;
    margin-bottom: 10px;

    .lgpd-alert__close{
        font-size: 16px;
        background: $cor01;
        line-height: 16px;
        padding: 10px 20px;
        color: #FFFFFF;
        font-weight: 700;
        margin: auto;
        border-radius: 7px;
    }
}

.show-lgpd-alert{
    .lgpd-alert{
        opacity: 1;
        visibility: visible;
    }
}
