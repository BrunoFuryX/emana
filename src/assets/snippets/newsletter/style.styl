.newsletter 
    background: #F9EEDA
    &__container 
        max-width: 1330px 
        padding: 70px 15px
        margin: auto
        display: flex 
        justify-content: space-between
        align-items: center
        gap: 20px
        @media mobile
            flex-direction: column
            justify-content: center
            gap: 20px
    &__main
        @media mobile
            width: 100%;
    &__form
        display: flex
        @media mobile
            flex-direction: column
            justify-content: center
            gap: 20px
            div 
                width: 100%
                input, button
                    width: 100%
    &__header 
        display: flex 
        justify-content: space-between
        align-items: flex-end
        flex-direction: column
        position relative
        text-align: right
        @media desktop
            padding: 0 0px 0 40px;
        @media mobile
            text-align: center
        
        svg
            position: absolute
            top: -20px
            right: -50px
            @media mobile
                display: none
            

    &__title 
        font-size: 43.5px
        font-weight: 600 
        color: #000000
        line-height: 1

    &__description 
        font-size: 24px
        color: #A7A8A9
        line-height: 1


    &__input, &__button
        width: 100% 
        height: 57px !important
        border: 0 !important
        padding: 0 45px
        font-size: 16px
        color: #808080
    &__input
        @media desktop
            width: 430px
    &__button 
        padding: 0 (30px / 2)
        color: #fff
        width: 175px
        background: #F7B84B
        font-size: 18px

        

    

    