.product
    a
        &:hover
            opacity 0.7
            text-decoration: none
    &__header 
        margin-bottom: 30px
        
    &__link 
        display: block 
        margin: auto

    &__image 
        display: block 
        width: auto
        object-fit: contain
        margin: 0 auto

    .prices
        text-align: center;
        padding: 16.5px 0
        &__out
            font-size: 23px
            font-weight: bold
            line-height: 30px
            color: #4D4D4D
        &__regular
            .prices__label
                font-size: 18px
                font-weight: bold
                line-height: 30px
                color: #4D4D4D
            .prices__price
                font-size: 36px
                font-weight: bold
                line-height: 30px
                color: #4D4D4D
    &__description
        font-style: normal;
        font-weight: normal;
        font-size: 20.9691px;
        line-height: 28px;
        text-align: center;
        color: #464646;
    &__name
        a   
            font-style: normal;
            font-weight: bold;
            font-size: 24px;
            line-height: 29px;
            text-align: center;
            color: #464646


    &__figure
        .product__link
            display: flex
            justify-content: center
            align-items: center
            height: 380px
    &__actions
        .product__link
            height: 56px
            width: 235px
            color: #fff
            background: #EB6323
            display: flex
            justify-content: center
            align-items: center
            font-size: 22px
            font-weight: 700
            gap: 8px
            margin: auto;
            text-transform: uppercase

.lazy-new
    -webkit-filter: blur(10px)
    filter: blur(10px)
    -moz-filter: blur(10px)
    -o-filter: blur(10px)
    -ms-filter: blur(10px)
    img
        height 100%
        width auto
