.search
    &__active
        background: transparent
        padding: 0
        width: auto
        height: auto
        min-height: 1px
        min-width: 1px
        @media mobile
            display: none 
    &__button
        background: transparent
        padding: 0
        width: auto
        height: auto
        min-height: 1px
        min-width: 1px
    &__form
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        display: flex
        opacity 0
        visibility: hidden
        @media mobile
            opacity 1
            visibility: visible
        &.active
            opacity 1
            visibility: visible
        input
            height: 50px
            width: 100%
            background: #fff
            border 1px solid #efefef
            color: #000
        button
            display: flex
            justify-content: center
            align-items: center
            background: #fff
            border 1px solid #efefef
            color: #000
            width: 50px
            height: 50px
            font-size: 0

.suggestion
    width: 100%
    border: 1px solid #ededed
    top: 100%
    max-width: 100%
    border-radius: 4px

    .suggestion-words
        background-color: #fff;
        padding: 14px;
        span
            border-bottom: 1px solid #ededed
        strong
            display: none
    .suggestion-products
        background-color: #fff;
        padding: 14px;
        strong
            display: none